#include <iostream>

using namespace std;

int main()
{
    char Province[3] = {'A', 'B', 'C'};
    int Temp[3][7];
    
    
    cout << "Please enter the daily temperature of each province in a week." << endl;
    for (int i = 0; i < 3; i++)
    {
        for (int d = 1; d <= 7; d++)
        {
            cout << "Province " << Province[i] << ", Day " << d << " : ";
            cin >> Temp[i][d];
        }
    }
    
    for (int i = 0; i < 3; i++)
    {
        for (int d = 1; d <= 7; d++)
        {
            cout << "Province " << Province[i] << ", Day " << d << " : ";
            cout << Temp[i][d] << "\n";
        }
    }
    
    return 0;
}
